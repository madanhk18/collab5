#include<stdio.h>
#define size 5
void main()
{
    int top=-1,stk[size];
    int ch;
    while(1)
    {
        printf("1.push\n 2.pop\n 3.display\n ");
        printf("enter your choice\n");
        scanf("%d",&ch);
        switch(ch)
        {
            case 1:push();
                    break;
            case 2:pop();
                    break;
            case 3:display();
                    break;
            default:printf("enter a valid input\n");
        }
    }
}
